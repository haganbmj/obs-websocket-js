{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noEmit": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "scripts",
    "test",
    "dist"
  ]
}
